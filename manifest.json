{
    "manifest_version": 2,
  
    "name": "Tab Counter",
    "description": "Counts the opened tabs.",
    "author": "Ny'alotha",
    "version": "1.0",
  
    "icons": { 
        "16": "icon/tab-icon16.png",
       "128": "icon/tab-icon.png" 
    },
    "permissions": [
        "tabs",
        "storage",
        "tts"
     ],
    "browser_action": {
      "default_icon": "icon/tab-icon16.png",
      "default_popup": "popup.html"
    },
    "background": {
        "scripts": ["background.js"]
    }
}

